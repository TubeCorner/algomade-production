// insertKeyword.js
import dotenv from "dotenv";
dotenv.config({ path: ".env" }); // <— load from .env file

import { createClient } from "@supabase/supabase-js";

const SUPABASE_URL = process.env.NEXT_PUBLIC_SUPABASE_URL;
const SUPABASE_SERVICE_ROLE_KEY = process.env.SUPABASE_SERVICE_ROLE_KEY;
const TABLE_NAME = process.env.SUPABASE_TABLE_KEYWORD_PROJECTS || "keyword_projects";

// Debug logs
console.log("DEBUG: SUPABASE_URL =", SUPABASE_URL);
console.log("DEBUG: SUPABASE_SERVICE_ROLE_KEY =", SUPABASE_SERVICE_ROLE_KEY ? "Loaded" : "Missing");
console.log("DEBUG: TABLE_NAME =", TABLE_NAME);

if (!SUPABASE_URL || !SUPABASE_SERVICE_ROLE_KEY) {
  throw new Error("SUPABASE_URL or SUPABASE_SERVICE_ROLE_KEY is missing in .env");
}

const supabase = createClient(SUPABASE_URL, SUPABASE_SERVICE_ROLE_KEY);

// Example insert
async function insertKeyword() {
  const data = {
    project_name: "Demo Keyword Project",
    created_at: new Date().toISOString(),
  };

  const { error } = await supabase.from(TABLE_NAME).insert([data]);

  if (error) {
    console.error("❌ Insert failed:", error);
  } else {
    console.log("✅ Insert succeeded:", data);
  }
}

insertKeyword();
